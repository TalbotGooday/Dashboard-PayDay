<resources>
	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="android:statusBarColor">@color/colorStatusBar</item>
		<item name="android:windowLightStatusBar">true</item>
		<item name="screenBackgroundColor">@color/colorBackgroundDay</item>
	</style>

	<style name="Splash" parent="Theme.AppCompat.Light.NoActionBar">
		<item name="android:background">@drawable/bg_splash_screen</item>
	</style>

	<style name="ScreenBackground">
		<item name="android:background">?screenBackgroundColor</item>
	</style>

	<style name="Text">
		<item name="android:textColor">@color/colorTitle</item>
	</style>

	<style name="Text.Title">
		<item name="android:textSize">24sp</item>
		<item name="android:fontFamily">@font/montserrat_bold</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="Text.TitleContent">
		<item name="android:textSize">24sp</item>
		<item name="android:fontFamily">@font/montserrat</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="Text.Placeholder">
		<item name="android:textSize">22sp</item>
		<item name="android:fontFamily">@font/montserrat</item>
		<item name="android:gravity">center</item>
	</style>

	<style name="Text.InputTitle">
		<item name="android:textSize">12sp</item>
		<item name="android:fontFamily">@font/montserrat</item>
	</style>

	<style name="Text.InputTitle.Margin">
		<item name="android:layout_marginStart">@dimen/default_horizontal_margin</item>
		<item name="android:layout_marginEnd">@dimen/default_horizontal_margin</item>
	</style>

	<style name="Text.ItemContent">
		<item name="android:textSize">14sp</item>
		<item name="android:fontFamily">@font/montserrat_medium</item>
		<item name="android:textColor">@color/colorDefaultText</item>
		<item name="android:maxLines">1</item>
		<item name="android:ellipsize">end</item>
	</style>

	<style name="Text.ItemContent.Large">
		<item name="android:textSize">20sp</item>
	</style>

	<style name="Text.RadioItem">
		<item name="android:textSize">14sp</item>
		<item name="android:fontFamily">@font/montserrat</item>
		<item name="buttonTint">@color/colorButtonText</item>
	</style>

	<style name="Text.Button">
		<item name="android:gravity">center</item>
		<item name="android:textSize">14sp</item>
		<item name="android:fontFamily">@font/montserrat</item>
		<item name="android:textColor">@drawable/selector_text_button</item>
	</style>

	<style name="Input" parent="Widget.AppCompat.EditText">
		<item name="android:paddingStart">12dp</item>
		<item name="android:paddingEnd">12dp</item>
		<item name="android:textSize">14sp</item>
		<item name="android:maxLines">1</item>
		<item name="android:paddingTop">@dimen/input_padding_vertical</item>
		<item name="android:paddingBottom">@dimen/input_padding_vertical</item>
		<item name="android:scrollHorizontally">true</item>
		<item name="android:background">@drawable/bg_input</item>
		<item name="android:fontFamily">@font/montserrat</item>
		<item name="android:textColorHint">@color/colorInputHint</item>
		<item name="android:textColor">@color/colorTitle</item>
	</style>

	<style name="Input.Margin">
		<item name="android:layout_marginStart">@dimen/default_horizontal_margin</item>
		<item name="android:layout_marginEnd">@dimen/default_horizontal_margin</item>
	</style>

	<style name="Button" parent="Widget.AppCompat.Button">
		<item name="android:paddingStart">12dp</item>
		<item name="android:paddingEnd">12dp</item>
		<item name="android:textAllCaps">false</item>
		<item name="android:textSize">14sp</item>
		<item name="android:textColor">@color/colorButtonTextLight</item>
		<item name="android:background">@drawable/bg_button</item>
		<item name="android:fontFamily">@font/montserrat_bold</item>
		<item name="android:textColorHint">@color/colorInputHint</item>
	</style>

	<style name="Button.Margin">
		<item name="android:layout_marginStart">@dimen/default_horizontal_margin</item>
		<item name="android:layout_marginEnd">@dimen/default_horizontal_margin</item>
	</style>

	<style name="ProgressBar">
		<item name="android:layout_width">@dimen/default_progress_size</item>
		<item name="android:layout_height">@dimen/default_progress_size</item>
	</style>

	<style name="ToolbarImageButton">
		<item name="android:padding">10dp</item>
		<item name="android:layout_width">@dimen/default_imageButton_height</item>
		<item name="android:layout_height">@dimen/default_imageButton_height</item>
		<item name="android:background">?selectableItemBackgroundBorderless</item>
	</style>

	<attr name="screenBackgroundColor" format="color|reference" />
</resources>